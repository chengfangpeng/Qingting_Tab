<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white_color" >
    
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#d6d6d6"/>
	
	<LinearLayout
	    android:id="@+id/footer_detail" 
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:orientation="horizontal">
	    
	    <ImageView 
	        android:id="@+id/b_return"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:scaleType="fitCenter"
	        android:src="@drawable/b_return_icon"
	        android:contentDescription="@null"/>
	    <ImageView 
	        android:id="@+id/b_refresh"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:scaleType="fitCenter"
	        android:src="@drawable/b_refresh_icon"
	        android:contentDescription="@null"/>
	    <ImageView 
	        android:id="@+id/b_share"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:scaleType="fitCenter"
	        android:src="@drawable/b_share_icon"
	        android:contentDescription="@null"/>
	    <ImageView 
	        android:id="@+id/b_more"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:scaleType="fitCenter"
	        android:src="@drawable/b_more_icon"
	        android:contentDescription="@null"/>
	    
	</LinearLayout>
    
</LinearLayout>
