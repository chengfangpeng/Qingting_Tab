<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cnwir.gongxin.ui.about.AboutActivity"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <ImageView
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black_color"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white_color"
        >

        <com.andexert.library.RippleView
            android:id="@+id/user_protocol_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            ripple:rv_type="rectangle"
            android:background="@drawable/selector_row"
            ripple:rv_color="@color/gray"


            >
            <ImageView
                android:id="@+id/user_protocol_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_protocol_icon"
                android:layout_margin="6dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/user_protocol_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black_color"
                android:text="@string/user_protocol"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:layout_alignBottom="@+id/user_protocol_icon"
                android:layout_toRightOf="@+id/user_protocol_icon"
                android:layout_toEndOf="@+id/user_protocol_icon"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/about_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"

                />



        </com.andexert.library.RippleView>
        <com.andexert.library.RippleView
            android:id="@+id/about_us_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ripple:rv_type="rectangle"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:background="@drawable/selector_row"
            ripple:rv_color="@color/gray"

            >
            <ImageView
                android:id="@+id/about_us_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/about_us_icon"
                android:layout_margin="6dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/about_us_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/black_color"
                android:text="@string/about_us"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:layout_alignBottom="@+id/about_us_icon"
                android:layout_toRightOf="@+id/about_us_icon"
                android:layout_toEndOf="@+id/about_us_icon"
                android:layout_centerVertical="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/about_arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"

                />



        </com.andexert.library.RippleView>
    </LinearLayout>



</LinearLayout>
