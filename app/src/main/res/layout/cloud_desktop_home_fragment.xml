<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/maincolor"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <com.cnwir.gongxin.view.ScaleProgress
                android:id="@+id/mScaleProgress"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:id="@+id/cloud_desktop_transfer_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_box"
                android:singleLine="true"
                android:text="开启传送门"
                android:textColor="@color/white_color"
                android:textSize="14sp"
                android:layout_marginBottom="50dp"
                android:layout_alignBottom="@+id/mScaleProgress"
                android:layout_centerHorizontal="true"
                android:padding="4dp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/transparent"
            android:gravity="center_horizontal"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="存储空间："
                android:textColor="@color/white_color"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/memorize_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="0"
                android:textColor="@color/white_color"
                android:textSize="14sp" />


        </LinearLayout>






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="看看哪些应用可以用云端启动"
            android:textColor="@color/white_color"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="6dp"
        >

        <ImageView
            android:id="@+id/free_one_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/free_one"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/free_one_title"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="省内存"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:layout_toRightOf="@id/free_one_img"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="无需安装本地app，0内存占用"
            android:textColor="@color/gray_black"
            android:textSize="12sp"
            android:layout_below="@id/free_one_title"
            android:layout_toRightOf="@id/free_one_img"

            />
    </RelativeLayout>



    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="1px" 
        android:background="@color/gray"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="6dp"
        >

        <ImageView
            android:id="@+id/free_two_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/free_two"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/free_two_title"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="免更新"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:layout_toRightOf="@id/free_two_img"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="不用担心每周一次的频繁更新"
            android:textColor="@color/gray_black"
            android:textSize="12sp"
            android:layout_below="@id/free_two_title"
            android:layout_toRightOf="@id/free_two_img"

            />
    </RelativeLayout>


    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="1px" 
        android:background="@color/gray"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="6dp"
        >

        <ImageView
            android:id="@+id/free_three_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/free_three"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/free_three_title"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="轻盈体验"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:layout_toRightOf="@id/free_three_img"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="云端应用，服务器加载，体验就是轻"
            android:textColor="@color/gray_black"
            android:textSize="12sp"
            android:layout_below="@id/free_three_title"
            android:layout_toRightOf="@id/free_three_img"

            />
    </RelativeLayout>


    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="1px" 
        android:background="@color/gray"
        />

</LinearLayout>